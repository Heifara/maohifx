<?import org.controlsfx.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.input.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ProgressIndicator?>

<fx:root type="javafx.scene.control.Tab" xmlns:fx="http://javafx.com/fxml">
	<graphic>
		<SplitMenuButton fx:id="menuButton" prefHeight="20" prefWidth="60" alignment="CENTER_RIGHT"  focusTraversable="false" onAction="#selectTabEvent">
			<graphic>
				<ProgressIndicator fx:id="progressIndicator" visible="false" />
			</graphic>
			<items>
				<MenuItem mnemonicParsing="false" text="Nouvelle onglet" onAction="#newTabEvent">
					<accelerator>
						<KeyCodeCombination alt="UP" code="T" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
					</accelerator>
				</MenuItem>
				<MenuItem mnemonicParsing="false" text="Fermer onglet" onAction="#closeTabEvent">
					<accelerator>
						<KeyCodeCombination alt="UP" code="W" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
					</accelerator>
				</MenuItem>
				<MenuItem mnemonicParsing="false" text="Actualiser" onAction="#refreshTabEvent">
					<accelerator>
						<KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
					</accelerator>
				</MenuItem>
				<MenuItem fx:id="hidShowUrl" mnemonicParsing="false" text="Masquer la barre d'adresse" onAction="#showHideUrl">
				</MenuItem>
			</items>
		</SplitMenuButton>
	</graphic>
	<BorderPane fx:id="content">
		<left />
		<top>
			<VBox BorderPane.alignment="CENTER">
				<children>
					<GridPane fx:id="addressPane">
						<columnConstraints>
							<ColumnConstraints hgrow="NEVER" />
							<ColumnConstraints hgrow="NEVER" />
							<ColumnConstraints hgrow="ALWAYS" />
							<ColumnConstraints hgrow="NEVER" />
						</columnConstraints>
						<children>
							<Button maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefWidth="50.0" text="Refresh" onAction="#refreshTabEvent">
								<GridPane.margin>
									<Insets left="5.0" />
								</GridPane.margin>
							</Button>
							<Button maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefWidth="50.0" text="Home" GridPane.columnIndex="1" onAction="#homeEvent">
								<GridPane.margin>
									<Insets left="5.0" right="5.0" />
								</GridPane.margin>
							</Button>
							<TextField fx:id="url" GridPane.columnIndex="2" onAction="#refreshTabEvent" />
						</children>
					</GridPane>
				</children>
				<BorderPane.margin>
					<Insets />
				</BorderPane.margin>
				<padding>
					<Insets bottom="10.0" />
				</padding>
				<effect>
					<DropShadow />
				</effect>
			</VBox>
		</top>
		<center />
		<bottom>
			<StatusBar fx:id="statusBar" BorderPane.alignment="CENTER" text="" />
		</bottom>
		<right />
	</BorderPane>
</fx:root>