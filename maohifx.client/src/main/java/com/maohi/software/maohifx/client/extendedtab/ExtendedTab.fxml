<?import org.controlsfx.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.input.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ProgressIndicator?>
<?import com.maohi.software.maohifx.client.link.Link?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.RowConstraints?>

<fx:root type="javafx.scene.control.Tab" xmlns:fx="http://javafx.com/fxml">
	<graphic>
		<GridPane fx:id="addressPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0">
			<columnConstraints>
				<ColumnConstraints hgrow="NEVER" />
			</columnConstraints>
			<children>
				<MenuButton fx:id="menuButton" prefWidth="50" focusTraversable="false" onMouseClicked="#selectTabEvent">
					<graphic>
						<ProgressIndicator fx:id="progressIndicator" visible="false" GridPane.columnIndex="1" />
					</graphic>
					<items>
						<MenuItem mnemonicParsing="false" text="Nouvelle onglet" onAction="#newTabEvent">
							<accelerator>
								<KeyCodeCombination alt="UP" code="T" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
							</accelerator>
						</MenuItem>
						<MenuItem mnemonicParsing="false" text="Fermer onglet" onAction="#closeTabEvent">
							<accelerator>
								<KeyCodeCombination alt="UP" code="W" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
							</accelerator>
						</MenuItem>
						<MenuItem mnemonicParsing="false" text="Actualiser" onAction="#refreshTabEvent">
							<accelerator>
								<KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
							</accelerator>
						</MenuItem>
						<MenuItem fx:id="hidShowUrl" mnemonicParsing="false" text="Masquer la barre d'adresse" onAction="#showHideUrl">
						</MenuItem>
					</items>
				</MenuButton>
			</children>
		</GridPane>
	</graphic>
	<BorderPane fx:id="content">
		<left />
		<top>
			<VBox BorderPane.alignment="CENTER">
				<children>
					<GridPane fx:id="addressPane">
						<columnConstraints>
							<ColumnConstraints hgrow="NEVER" />
							<ColumnConstraints hgrow="NEVER" />
							<ColumnConstraints hgrow="ALWAYS" />
							<ColumnConstraints hgrow="NEVER" />
						</columnConstraints>
						<children>
							<Button fx:id="refreshButton" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#refreshTabEvent">
								<graphic>
									<ImageView fitHeight="20" fitWidth="20">
										<Image url="@refresh.png" />
									</ImageView>
								</graphic>
							</Button>
							<Button fx:id="homeButton" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" GridPane.columnIndex="1" onAction="#homeEvent">
								<graphic>
									<ImageView fitHeight="20" fitWidth="20">
										<Image url="@home.png" />
									</ImageView>
								</graphic>
							</Button>
							<TextField fx:id="url" GridPane.columnIndex="2" maxHeight="Infinity" onAction="#refreshTabEvent" />
						</children>
					</GridPane>
				</children>
				<BorderPane.margin>
					<Insets />
				</BorderPane.margin>
				<padding>
					<Insets bottom="10.0" />
				</padding>
				<effect>
					<DropShadow />
				</effect>
			</VBox>
		</top>
		<center />
		<bottom>
			<StatusBar fx:id="statusBar" BorderPane.alignment="CENTER" text="" />
		</bottom>
		<right />
	</BorderPane>
</fx:root>